---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div
  class="py-8 px-5 flex flex-col gap-4 rounded-xl bg-[#1F2831B2] border border-[#2D3843] shadow-card text-sm text-[#F6F7F9CC] leading-5"
>
  <h3 class="text-[#F6F7F9] font-bold text-[17px] leading-[1.4]">
    {title}
  </h3>

  <div class="text-[#F6F7F9CC] text-sm leading-5">{content}</div>
</div>
